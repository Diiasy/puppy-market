<div class="container center-box">
    <div class="row">
        {{#each puppy}}
          <div class="col col-sm-8 col-md-6 col-lg-4 p-2 d-flex justify-content-center">
            <div class="card">
                <a class="puppy-title" href="/puppies/detail/{{this._id}}">
                <h5 class="card-title p-2">{{this.name}}</h5>

                <img src="/uploads/puppies/{{ this.mainPicture }}" class="card-img-top" alt="...">
                <div class="card-body">
                    <p class="card-text">{{this.description}}</p>
                </div>
            </div>
        </div>
        {{/each}}

    </div>
</div>














