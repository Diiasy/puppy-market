<div class="container">
    <div class="row justify-content-center my-3">
        <div class="col-sm-8 col-md-6 col-lg-4">
            <h1>{{ puppy.name }}</h1>
        </div>
    </div>
    <div class="row justify-content-center my-3">
        <div class="col-sm-8 col-md-6 col-lg-4">
            <p>Breeds:</p>
            <ul>
                {{#each puppy.breed }}
                    <li>{{this}}</li>
                {{/each}}
            </ul>
            <p>Gender: {{ puppy.gender }}</p>
            <p>Birthday: {{ puppy.birthDate }}</p>
            <p>Colors:</p>
            <ul>
                {{#each puppy.colors }}
                    <li>{{ this }}</li>
                {{/each}}
            </ul>
            <p>Price: {{ puppy.price }}â‚¬</p>
            <p>Description: {{ puppy.description }}</p>
            <p>Owner: <a href="/users/profile?id={{puppy.owner._id}}">{{ puppy.owner.username }}</a></p>
        </div>
        <div class="col-sm-8 col-md-6 col-lg-4">
            <img src="{{ puppy.mainPicturePath }}" alt="">
            {{#if isOwner}}
                <p><a href="/puppies/update/{{puppy._id}}">Update puppy</a></p>
                <p><a href="/puppies/delete/{{puppy._id}}">Delete puppy</a></p>
            {{/if}}
        </div>
    </div>
    <div class="row justify-content-center my-3">
        <h4>Additional Pictures</h4>
    </div>

    <div class="row">
    {{#each puppy.picturesPath}}
        <div class="col-sm-8 col-md-6 col-lg-4 p-2 d-flex justify-content-center">
            <div class="card" style="width: 22rem">
                <img src="{{ this }}" alt="" class="card-img-top" >
            </div>
        </div>
    {{/each}}
    </div>

    <div class="row justify-content-center my-3">
        <h4>Comments</h4>
    </div>

    <div class="row">
        <div class="col-sm-8 col-md-6 col-lg-6 p-2 d-flex justify-content-center"> 
            {{#each puppy.comments}}
                <div class="update-comments">
                    <div class="comments">
                        <p class="comments-content">{{this.content}}</p>
                        <p>{{this.author.username}}</p>
                        <a class="update-comments-btn" href="/puppies/comments/update">Update commments</a>
                        <a href="/puppies/comments/delete/{{this._id}}">Delete commments</a>
                    </div>
                
                    <form style="display: none;" class="update-comments-form">
                        <input class="update-comments-content" type="text" value="{{this.content}}" name="content" placeholder="Your comment" >
                        <input class="comments-id" type="text" hidden value="{{this._id}}" name="id">
                        <button class="confirm-update-comments-btn" type="submit">Edit comment</button>            
                    </form>
                </div>
            {{/each}}
            <input class="puppy-id"  type="text" hidden value="{{puppy.id}}" name="puppyId">
        </div>
    </div>

    <div class="row d-flex justify-content-center my-3">
        <div class="col-sm-8 col-md-6">           
            <form action="/puppies/comment" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" id="content" name="content" placeholder="Your comment" >
                    <input type="text" hidden value="{{puppy.id}}" name="id">
                </div>

                <button type="submit" class="btn btn-secondary">Comment</button>
            </form>
        </div>
    </div>







<h2>Post a comment</h2>
<form action="/puppies/comments/create" method="POST">
    <input type="text" id="content" name="content" placeholder="Your comment" >
    <button type="submit">Post comment</button>
    <input type="text" hidden value="{{puppy.id}}" name="id">
</form>

</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/javascripts/update-comments.js"></script>
            